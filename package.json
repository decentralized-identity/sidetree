{
  "name": "@decentralized-identity/sidetree",
  "version": "0.6.1",
  "description": "Node.js implementation of Sidetree.",
  "repository": "https://github.com/decentralized-identity/sidetree-core",
  "license": "Apache-2.0",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "dependencies": {
    "base64url": "3.0.1",
    "bitcore-lib": "8.7.1",
    "http-status": "1.3.2",
    "ipfs": "0.42.0",
    "jose": "1.25.0",
    "mongodb": "3.2.3",
    "multihashes": "0.4.14",
    "node-fetch": "2.6.0",
    "priorityqueue": "1.0.0",
    "spec-up": "0.9.71",
    "time-span": "3.1.0",
    "yieldable-json": "1.1.0"
  },
  "devDependencies": {
    "@types/async-retry": "1.4.0",
    "@types/bitcore-lib": "0.15.1",
    "@types/http-status": "0.2.30",
    "@types/jasmine": "3.3.12",
    "@types/mongodb": "3.1.23",
    "@types/node": "11.13.4",
    "@types/node-fetch": "2.3.2",
    "@types/time-span": "2.0.0",
    "async-retry": "1.2.3",
    "copyfiles": "2.1.0",
    "husky": "1.3.1",
    "jasmine": "3.4.0",
    "jasmine-reporters": "2.3.2",
    "jasmine-spec-reporter": "4.2.1",
    "nyc": "15.0.1",
    "ts-node": "8.3.0",
    "tslint": "5.11.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.4.3"
  },
  "scripts": {
    "build": "tsc && copyfiles \"lib/**/*.json\" dist && copyfiles \"tests/**/*.js*\" dist && copyfiles \"package.json\" dist",
    "test": "npm run build && nyc jasmine --config=./tests/jasmine.json",
    "lint": "tslint --fix --project .",
    "spec": "node ./scripts/spec-render.js",
    "spec:edit": "node ./scripts/spec-edit.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "nyc": {
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "dist/lib/**"
    ],
    "exclude": [
      "dist/lib/**/interfaces/**",
      "dist/lib/**/models/**",
      "dist/lib/core/versions/[0-9]**/**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  }
}
