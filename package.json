{
  "name": "sidetree-core",
  "version": "0.1.0",
  "description": "Node.js implementation of the Sidetree protocol.",
  "repository": "https://github.com/decentralized-identity/sidetree-core",
  "license": "Apache-2.0",
  "main": "dist/src/index.js",
  "dependencies": {
    "@decentralized-identity/did-common-typescript": "^0.1.2",
    "bs58": "^4.0.1",
    "double-ended-queue": "^2.1.0-0",
    "http-status": "^1.2.0",
    "koa": "^2.3.0",
    "koa-router": "^7.2.1",
    "node-fetch": "^2.2.0",
    "raw-body": "^2.3.3"
  },
  "devDependencies": {
    "@types/bs58": "^3.0.30",
    "@types/double-ended-queue": "^2.1.0",
    "@types/http-status": "^0.2.30",
    "@types/jasmine": "^2.8.8",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@types/node": "^10.3.1",
    "@types/node-fetch": "^2.1.2",
    "copyfiles": "^2.1.0",
    "husky": "^0.14.3",
    "jasmine": "^3.1.0",
    "jasmine-reporters": "^2.3.2",
    "jasmine-spec-reporter": "^4.2.1",
    "jasmine-ts": "^0.2.1",
    "nyc": "^13.0.1",
    "tslint": "^5.10.0",
    "tslint-config-standard": "^8.0.1",
    "typescript": "^2.9.1"
  },
  "scripts": {
    "precommit": "npm run lint",
    "build": "tsc && copyfiles src/*.json dist",
    "tests": "jasmine-ts --config=./tests/jasmine.json",
    "cc": "npm run build && nyc jasmine --config=./tests/jasmine-cc.json",
    "lint": "tslint --fix --project .",
    "start": "node dist/src/index.js"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "dist/src/**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  }
}
