{
  "name": "@decentralized-identity/sidetree",
  "version": "0.3.0",
  "description": "Node.js implementation of the Sidetree protocol.",
  "repository": "https://github.com/decentralized-identity/sidetree-core",
  "license": "Apache-2.0",
  "main": "dist/lib/index.js",
  "types": "dist/lib/index.d.ts",
  "dependencies": {
    "@decentralized-identity/did-auth-jose": "0.1.5",
    "@decentralized-identity/did-common-typescript": "0.1.2",
    "base64url": "3.0.1",
    "bitcore-lib": "8.3.0",
    "http-status": "1.3.2",
    "ipfs": "0.35.0",
    "koa": "2.7.0",
    "koa-router": "7.4.0",
    "mongodb": "3.2.3",
    "multihashes": "0.4.14",
    "node-fetch": "2.6.0",
    "raw-body": "2.3.3",
    "secp256k1": "3.6.2",
    "time-span": "3.1.0",
    "yieldable-json": "1.0.1"
  },
  "devDependencies": {
    "@types/async-retry": "1.4.0",
    "@types/bitcore-lib": "0.15.1",
    "@types/double-ended-queue": "2.1.0",
    "@types/http-status": "0.2.30",
    "@types/jasmine": "3.3.12",
    "@types/koa": "2.0.48",
    "@types/koa-router": "7.0.40",
    "@types/mongodb": "3.1.23",
    "@types/node": "11.13.4",
    "@types/node-fetch": "2.3.2",
    "@types/readable-stream": "2.3.0",
    "@types/supertest": "2.0.7",
    "@types/time-span": "2.0.0",
    "async-retry": "1.2.3",
    "copyfiles": "2.1.0",
    "husky": "1.3.1",
    "jasmine": "3.4.0",
    "jasmine-reporters": "2.3.2",
    "jasmine-spec-reporter": "4.2.1",
    "nyc": "13.3.0",
    "readable-stream": "3.3.0",
    "supertest": "4.0.2",
    "ts-node": "8.3.0",
    "tslint": "5.11.0",
    "tslint-config-standard": "8.0.1",
    "typescript": "3.4.3"
  },
  "scripts": {
    "precommit": "npm run lint",
    "build": "tsc && copyfiles \"src/**/*.json\" dist && copyfiles \"lib/**/*.json\" dist && copyfiles \"tests/**/*.js*\" dist",
    "test": "npm run build && nyc jasmine --config=./tests/jasmine.json",
    "lint": "tslint --fix --project .",
    "start": "node dist/src/core.js",
    "bitcoin": "node dist/src/bitcoin.js",
    "ipfs": "node dist/src/ipfs.js",
    "core": "node dist/src/core.js"
  },
  "nyc": {
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "dist/lib/**"
    ],
    "exclude": [
      "dist/lib/**/interfaces/**",
      "dist/lib/**/I[A-Z]**"
    ],
    "reporter": [
      "text",
      "cobertura",
      "html"
    ]
  }
}
